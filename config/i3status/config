# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 60
}

order += "read_file micstatus"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "disk /"
order += "memory"
order += "battery 0"
order += "tztime local"

read_file micstatus {
    path = "/var/run/lock/mic-unmuted"
    format = "ON "
    format_bad = "OFF "
}

volume master {
    format = "♪ %volume"
    format_muted = "× %volume"
    device = "pulse:0"
}

wireless _first_ {
    format_up = " %quality"
    format_down = ""
    format_quality = "%02d%s"
}

ethernet _first_ {
    format_up = "%ip %speed"
    format_down = "ETH"
}

battery 0 {
    format = "%status %percentage %remaining"
    format_down = ""
    status_chr = ""
    status_bat = ""
    status_unk = ""
    status_full = ""
    last_full_capacity = true
    integer_battery_capacity = true
    hide_seconds = true
    low_threshold = 30
    threshold_type = time
}

disk "/" {
    format = " %avail"
    low_threshold = 10
    threshold_type = percentage_free
}

memory {
    format = " %available"
    threshold_degraded = "1G"
    format_degraded = "MEMORY < %available"
}

tztime local {
    format = "%b%d  %H:%M"
}
