# -*- mode: sh -*-
#
# It is intended for setting session-wide environment variables that should
# apply to all apps.
#

if command -v emacsclient > /dev/null; then
    VISUAL=$(command -v emacsclient)' -a "" -c'
    export VISUAL
fi

if command -v ssh-askpass > /dev/null; then
    SSH_ASKPASS=$(command -v ssh-askpass)
    export SSH_ASKPASS
fi

if command -v keychain > /dev/null; then
    eval $(keychain --eval --agents gpg,ssh --quiet "$HOME/.ssh/"*".key" 4191E629C11EEB98)
fi
